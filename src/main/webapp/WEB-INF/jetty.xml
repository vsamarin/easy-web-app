<?xml version="1.0"  encoding="UTF-8"?>
<!DOCTYPE Configure PUBLIC
        "-//Mort Bay Consulting//DTD Configure//EN"
        "http://www.eclipse.org/jetty/configure_9_0.dtd">

<Configure id="Application" class="org.eclipse.jetty.webapp.WebAppContext">
    <New id="ApplicationDataSource" class="org.eclipse.jetty.plus.jndi.Resource">
        <Arg>jdbc/ApplicationDataSource</Arg>
        <Arg>
            <New class="org.sqlite.SQLiteDataSource">
                <!--Set name="driverClass">org.h2.Driver</Set-->
                <Set name="url">jdbc:sqlite:database.sqlite</Set>
                <!--Set name="username"></Set-->
                <!--Set name="password"></Set-->
            </New>
        </Arg>
    </New>
</Configure>


